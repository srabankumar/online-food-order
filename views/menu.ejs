 
 <div class="jumbotron">
  <h2>Hi <%= User.name %></h2> 
  <p>Please Select our Delicious Biriyani.</p> 
</div>
<div class="container">
   <form class="form-horizontal" role="form" action="/menu/payment" method="post">
       <div class="header1 col-md-12 form-group">
             <h3 class="col-md-offset-1 col-md-6">Menu</h3>
              <h3 class="col-md-5">PRICE</h3>
       </div>
       <div class="form-group">
            <ul style="list-style:none;">
               <% menu.forEach(function(biriyani) {%>
            <li>
                <div class="checkbox" class="col-md-12">
                    <label class="col-md-5"><input type="checkbox" onchange="calculateAmount(this)"  ><a href="/menu/<%= biriyani.name%>" data-toggle="modal" class="name"><%= biriyani.name %></a></label>
                    <label class="col-md-4 col-md-offset-2 price">&#8377;<%= biriyani.Price %></label>
                </div>
            </li>
            <%})%>
           </ul>
       </div>
       
    <div class="form-group">
      <label class="control-label col-md-2" for="total">Total Amount:</label>
      <!--<div class="col-md-3 col-md-offset-5">
        <input type="text" class="form-control" id="total"  name="total"> -->
        <label class="col-md-5 col-md-offset-5" id="total" style="padding-left:4%">&#8377;0</label>
      <!--</div> -->
    </div>
       
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-success" id="order" onclick="submitOrder(event)">Submit</button>
        </div>
    </div>
       <input type="hidden"  id="details" name="details"/>
        <input type="hidden"  id="totalPrice" name="totalPrice"/>
    </form> 
</div>


  


  